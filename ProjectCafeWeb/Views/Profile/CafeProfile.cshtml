<script>
    // CAFE MODAL
    document.querySelectorAll('[data-bs-toggle="modal"]').forEach(button => {
        button.addEventListener('click', function () {
            const modal = document.getElementById('cafeModal');

            const isEdit = this.classList.contains('edit-cafe-btn');
            modal.setAttribute('data-mode', isEdit ? 'edit' : 'create');

            if (isEdit) {
                document.querySelector('input[placeholder="Kafe ismini yazın..."]').value = this.getAttribute('data-cafe-name');
                document.querySelector('input[placeholder="Kafe konumu yazın..."]').value = this.getAttribute('data-cafe-location');
                const image = this.getAttribute('data-cafe-image');
                if (image) document.getElementById('preview').src = image;
                modal.setAttribute('data-cafe-id', this.getAttribute('data-cafe-id'));
            } else {
                document.querySelector('input[placeholder="Kafe ismini yazın..."]').value = "";
                document.getElementById('cafe-preview').src = "";
                modal.removeAttribute('data-cafe-id');
            }
        });
    });

