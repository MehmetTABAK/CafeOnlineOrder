<script>
    // CAFE MODAL
    document.querySelectorAll('[data-bs-toggle="modal"]').forEach(button => {
        button.addEventListener('click', function () {
            const modal = document.getElementById('cafeModal');

            const isEdit = this.classList.contains('edit-cafe-btn');
            modal.setAttribute('data-mode', isEdit ? 'edit' : 'create');

            if (isEdit) {
                document.querySelector('input[placeholder="Kafe ismini yazın..."]').value = this.getAttribute('data-cafe-name');
                document.querySelector('input[placeholder="Kafe konumu yazın..."]').value = this.getAttribute('data-cafe-location');
                const image = this.getAttribute('data-cafe-image');
                if (image) document.getElementById('preview').src = image;
                modal.setAttribute('data-cafe-id', this.getAttribute('data-cafe-id'));
            } else {
                document.querySelector('input[placeholder="Kafe ismini yazın..."]').value = "";
                document.getElementById('preview').src = "";
                modal.removeAttribute('data-cafe-id');
            }
        });
    });

    document.querySelector('#cafeModal .btn-primary').addEventListener('click', () => {
        const modal = document.getElementById('cafeModal');
        const mode = modal.getAttribute('data-mode');
        const id = modal.getAttribute('data-cafe-id');

        const name = document.querySelector('input[placeholder="Kafe ismini yazın..."]').value;
        const imageSrc = document.getElementById('preview').src;
        const cafeLocations = document.querySelector('input[placeholder="Kafe konumu yazın..."]').value;

        const payload = {
            id: mode === 'edit' ? id : '00000000-0000-0000-0000-000000000000',
            name: name,
            image: imageSrc,
            location: cafeLocations,
            active: true,
        };

        const endpoint = mode === 'edit' ? '/Profile/UpdateCafe' : '/Profile/AddCafe';

        fetch(endpoint, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                alert(data.message);
                location.reload();
            } else {
                alert(data.message || "İşlem başarısız.");
            }
        })
        .catch(() => alert('Sunucu hatası oluştu.'));
    });

    // SECTION MODAL
    document.querySelectorAll('[data-bs-toggle="modal"]').forEach(button => {
        button.addEventListener('click', function () {
            const modal = document.getElementById('sectionModal');

            const isEdit = this.classList.contains('edit-section-btn');
            modal.setAttribute('data-mode', isEdit ? 'edit' : 'create');

            if (isEdit) {
                document.querySelector('input[placeholder="Bölüm ismini yazın..."]').value = this.getAttribute('data-sections-name');
                const image = this.getAttribute('data-sections-image');
                if (image) document.getElementById('preview').src = image;
                modal.setAttribute('data-sections-id', this.getAttribute('data-sections-id'));
            } else {
                document.querySelector('input[placeholder="Bölüm ismini yazın..."]').value = "";
                document.getElementById('preview').src = "";
                modal.removeAttribute('data-sections-id');
            }
        });
    });

    document.querySelector('#sectionModal .btn-primary').addEventListener('click', () => {
        const modal = document.getElementById('sectionModal');
        const mode = modal.getAttribute('data-mode');
        const id = modal.getAttribute('data-sections-id');

        const name = document.querySelector('input[placeholder="Bölüm ismini yazın..."]').value;
        const imageSrc = document.getElementById('preview').src;

        const payload = {
            id: mode === 'edit' ? id : '00000000-0000-0000-0000-000000000000',
            name: name,
            image: imageSrc,
            active: true
        };

        const endpoint = mode === 'edit' ? '/Profile/UpdateSection' : '/Profile/AddSection';

        fetch(endpoint, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                alert(data.message);
                location.reload();
            } else {
                alert(data.message || "İşlem başarısız.");
            }
        })
        .catch(() => alert('Sunucu hatası oluştu.'));
    });

    document.querySelectorAll('.delete-section-btn').forEach(button => {
        button.addEventListener('click', function () {
            const sectionId = this.getAttribute('data-delete-id');
            if (!confirm("Bu bölümü silmek istiyor musunuz?")) return;

            fetch('/Profile/DeleteSection', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ id: sectionId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert(data.message);
                    location.reload();
                } else {
                    alert(data.message || 'Silme işlemi başarısız oldu.');
                }
            })
            .catch(() => alert('Sunucu hatası oluştu.'));
        });
    });

    // TABLE MODAL
    document.querySelectorAll('[data-bs-toggle="modal"]').forEach(button => {
        button.addEventListener('click', function () {
            const modal = document.getElementById('tableModal');
            const sectionName = this.getAttribute('data-table-sections-name');
            const sectionId = this.getAttribute('data-table-sections-id');

            document.getElementById('sectionName').value = sectionName;
            document.getElementById('sectionId').value = sectionId;

            const isEdit = this.classList.contains('edit-table-btn');
