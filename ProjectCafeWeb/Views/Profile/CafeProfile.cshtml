            const tableId = this.getAttribute('data-delete-table-id');
            if (!confirm("Bu masayı silmek istiyor musunuz?")) return;

            fetch('/Profile/DeleteTable', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ id: tableId })
            })
            .then(res => res.json())
            .then(data => {
                alert(data.message);
                if (data.success) location.reload();
            })
            .catch(() => alert('Sunucu hatası oluştu.'));
        });
    });
