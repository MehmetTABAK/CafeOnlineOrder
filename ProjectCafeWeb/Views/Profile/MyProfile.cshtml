<!-- Modal Başlangıcı -->
<div class="modal fade" id="adminModal" tabindex="-1" aria-labelledby="adminModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content rounded-4 shadow-lg">
            <div class="modal-body">
                <h3 class="text-muted">Resim:</h3>
                <label for="image-upload" class="upload-area">
                    <span class="upload-icon">
                        <svg xml:space="preserve" viewBox="0 0 184.69 184.69" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns="http://www.w3.org/2000/svg" id="Capa_1" version="1.1" width="60px" height="60px">
                        <g>
                        <path d="M149.968,50.186c-8.017-14.308-23.796-22.515-40.717-19.813C102.609,16.43,88.713,7.576,73.087,7.576c-22.117,0-40.112,17.994-40.112,40.115c0,0.913,0.036,1.854,0.118,2.834C14.004,54.875,0,72.11,0,91.959c0,23.456,19.082,42.535,42.538,42.535h33.623v-7.025H42.538c-19.583,0-35.509-15.929-35.509-35.509c0-17.526,13.084-32.621,30.442-35.105c0.931-0.132,1.768-0.633,2.326-1.392c0.555-0.755,0.795-1.704,0.644-2.63c-0.297-1.904-0.447-3.582-0.447-5.139c0-18.249,14.852-33.094,33.094-33.094c13.703,0,25.789,8.26,30.803,21.04c0.63,1.621,2.351,2.534,4.058,2.14c15.425-3.568,29.919,3.883,36.604,17.168c0.508,1.027,1.503,1.736,2.641,1.897c17.368,2.473,30.481,17.569,30.481,35.112c0,19.58-15.937,35.509-35.52,35.509H97.391v7.025h44.761c23.459,0,42.538-19.079,42.538-42.535C184.69,71.545,169.884,53.901,149.968,50.186z" style="fill:#010002;"></path>
                            </g>
                        </svg>
                    </span>
                    <p class="imgtext">Resminizi seçiniz!</p>
                    <img id="preview" alt="Resminiz">
                    <input class="input" type="file" id="image-upload" accept="image/*">
                </label>

                <h3 class="text-muted">İsim:</h3>
                <input type="text" placeholder="Buraya isminizi yazın..." class="form-control" required>

                <h3 class="text-muted">Soyisim:</h3>
                <input type="text" placeholder="Buraya soyisminizi yazın..." class="form-control" required>

                <h3 class="text-muted">Çalışan Email:</h3>
                <input type="email" placeholder="Buraya email adresinizi yazın..." class="form-control" required>

                <h3 class="text-muted">Çalışan Şifre:</h3>
                <input type="text" placeholder="Buraya şifresinizi yazın..." class="form-control" required>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">Kapat</button>
                <button type="button" class="btn btn-primary rounded-pill">Kaydet</button>
            </div>
        </div>
    </div>
</div>

<script>
    // Modal açılırken formu ayarla
    document.querySelectorAll('[data-bs-toggle="modal"]').forEach(button => {
        button.addEventListener('click', function () {
            const modal = document.getElementById('adminModal');

            const isEdit = this.classList.contains('edit-admin-btn');
            modal.setAttribute('data-mode', isEdit ? 'edit' : 'create');

            if (isEdit) {
                document.querySelector('input[placeholder="Buraya isminizi yazın..."]').value = this.getAttribute('data-firstname');
                document.querySelector('input[placeholder="Buraya soyisminizi yazın..."]').value = this.getAttribute('data-lastname');
                document.querySelector('input[placeholder="Buraya email adresinizi yazın..."]').value = this.getAttribute('data-email');
                document.querySelector('input[placeholder="Buraya şifresinizi yazın..."]').value = this.getAttribute('data-password');
                const image = this.getAttribute('data-image');
                if (image) document.getElementById('preview').src = image;
                modal.setAttribute('data-id', this.getAttribute('data-id'));
            } else {
                document.querySelector('input[placeholder="Buraya isminizi yazın..."]').value = "";
                document.querySelector('input[placeholder="Buraya soyisminizi yazın..."]').value = "";
                document.querySelector('input[placeholder="Buraya email adresinizi yazın..."]').value = "";
                document.querySelector('input[placeholder="Buraya şifresinizi yazın..."]').value = "";
                document.getElementById('preview').src = "";
                modal.removeAttribute('data-id');
            }
        });
    });

    // Üst menü kaydetme ve güncelleme işlemleri
    document.querySelector('#adminModal .btn-primary').addEventListener('click', () => {
        const modal = document.getElementById('adminModal');
        const mode = modal.getAttribute('data-mode');
        const id = modal.getAttribute('data-id');

        const firstname = document.querySelector('input[placeholder="Buraya isminizi yazın..."]').value;
        const lastname = document.querySelector('input[placeholder="Buraya soyisminizi yazın..."]').value;
        const email = document.querySelector('input[placeholder="Buraya email adresinizi yazın..."]').value;
        const password = document.querySelector('input[placeholder="Buraya şifresinizi yazın..."]').value;
        const imageSrc = document.getElementById('preview').src;

        const payload = {
            id: mode === 'edit' ? parseInt(id) : 0,
            firstname: firstname,
            lastname: lastname,
            imageSrc: imageSrc,
            email: email,
            password: password,
            active: true,
        };

        const endpoint = mode === 'edit' ? '/Profile/UpdateAdmin' : '/Profile/AddAdmin';

        fetch(endpoint, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                alert(data.message);
                location.reload();
            } else {
                alert(data.message || "İşlem başarısız.");
            }
        })
        .catch(() => alert('Sunucu hatası oluştu.'));
    });

    // Üst menü silme işlemi
    document.querySelectorAll('.delete-admin-btn').forEach(button => {
        button.addEventListener('click', function () {
            const adminId = this.getAttribute('data-id');
            if (!confirm("Bu admin silmek istiyor musunuz?")) return;

            fetch('/Profile/DeleteAdmin', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ id: parseInt(adminId) })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert(data.message || 'Silme işlemi başarısız oldu.');
                    }
                })
                .catch(() => alert('Sunucu hatası oluştu.'));
        });
    });
</script>

