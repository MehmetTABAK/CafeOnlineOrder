@{
    ViewData["Title"] = "Üst Menü";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using ProjectCafeEntities
@model List<MenuCategory>

<div class="row pt-4">
    @foreach (var menuCategory in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="blog-card">
                <a href="#">
                    <img src="@menuCategory.CategoryImage" alt="@menuCategory.CategoryName" class="img-fluid">
                </a>
                <div class="blog-content">
                    <a href="#">
                        <h3 class="mb-4 mt-2">
                            @menuCategory.CategoryName
                        </h3>
                    </a>
                    <a href="#">
                        <button class="readmore-btn">
                            <span class="book-wrapper">
                                <svg xmlns="http://www.w3.org/2000/svg"
                                     fill="rgb(86, 69, 117)"
                                     viewBox="0 0 126 75"
                                     class="book">
                                    <rect stroke-width="3"
                                          stroke="#fff"
                                          rx="7.5"
                                          height="70"
                                          width="121"
                                          y="2.5"
                                          x="2.5"></rect>
                                    <line stroke-width="3" stroke="#fff" y2="75" x2="63.5" x1="63.5"></line>
                                    <path stroke-linecap="round"
                                          stroke-width="4"
                                          stroke="#fff"
                                          d="M25 20H50"></path>
                                    <path stroke-linecap="round"
                                          stroke-width="4"
                                          stroke="#fff"
                                          d="M101 20H76"></path>
                                    <path stroke-linecap="round"
                                          stroke-width="4"
                                          stroke="#fff"
                                          d="M16 30L50 30"></path>
                                    <path stroke-linecap="round"
                                          stroke-width="4"
                                          stroke="#fff"
                                          d="M110 30L76 30"></path>
                                </svg>

                                <svg xmlns="http://www.w3.org/2000/svg"
                                     fill="none"
                                     viewBox="0 0 65 75"
                                     class="book-page">
                                    <path stroke-linecap="round"
                                          stroke-width="4"
                                          stroke="#fff"
                                          d="M40 20H15"></path>
                                    <path stroke-linecap="round"
                                          stroke-width="4"
                                          stroke="#fff"
                                          d="M49 30L15 30"></path>
                                    <path stroke-width="3"
                                          stroke="#fff"
                                          d="M2.5 2.5H55C59.1421 2.5 62.5 5.85786 62.5 10V65C62.5 69.1421 59.1421 72.5 55 72.5H2.5V2.5Z"></path>
                                </svg>
                            </span>
                            <span class="text"> Üst Menü Düzenle </span>
                        </button>
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<div class="d-flex justify-content-end mb-4">
    <button class="noselect">
        <span class="text">Üst Menü Ekle</span>
        <span class="icon">
            <svg viewBox="0 0 24 24" height="24" width="24"></svg>
            <span class="buttonSpan">+</span>
        </span>
    </button>
</div>