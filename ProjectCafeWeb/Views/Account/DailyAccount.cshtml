
@{
    ViewData["Title"] = "Günlük Ödemeler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<ProjectCafeWeb.ViewModels.DailyAccountViewModel>

@functions {
    string GetPaymentMethod(byte method)
    {
        return method switch
        {
            1 => "Kart",
            2 => "Nakit",
            3 => "İade",
            4 => "İkram",
            _ => "-"
        };
    }
}

