@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@inject IHttpContextAccessor HttpContextAccessor
@{
    var cafeId = HttpContextAccessor.HttpContext.Session.GetInt32("CafeId") ?? 0;
    var tableId = HttpContextAccessor.HttpContext.Session.GetInt32("TableId") ?? 0;
}

<div class="text-center py-5">
    <h1 class="display-4 mb-4">Hoş Geldiniz!</h1>
    <p class="lead">Menümüzü inceleyin, öneride bulunun, şikayetinizi iletin veya güncel fırsatlara göz atın!</p>
</div>

<div class="row text-center g-4 mt-5">
    <div class="col-md-3">
        <a href="/menu-kategori/@cafeId/@tableId" class="btn btn-primary w-100 py-3">
            <i class="fa-solid fa-utensils fa-2x mb-2"></i><br />
            Menüyü Gör
        </a>
    </div>
    <div class="col-md-3">
        <a href="/User/Suggestions" class="btn btn-info w-100 py-3">
            <i class="fa-solid fa-lightbulb fa-2x mb-2"></i><br />
            Öneriler
        </a>
    </div>
    <div class="col-md-3">
        <a href="/User/Complaints" class="btn btn-warning w-100 py-3">
            <i class="fa-solid fa-circle-exclamation fa-2x mb-2"></i><br />
            Şikayetler
        </a>
    </div>
    <div class="col-md-3">
        <a href="/User/Deals" class="btn btn-success w-100 py-3">
            <i class="fa-solid fa-tags fa-2x mb-2"></i><br />
            Fırsatlar
        </a>
    </div>
</div>
